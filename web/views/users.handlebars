<!DOCTYPE HTML>

<div class="container">
    <p></p>
    <h1> {{title}} </h1>

    <h5><a href="/">Go back to the home page</a></h5>

    <p></p>

    <h4>Add Character</h4>

	<div class="box">
        <div class="subtitle is-5"></div>
        <form id="addcharacter" action="/users" method="post">

            
            <div class="field">
                <label class="label">Full Name</label>
                <input class="input" type="text" name="fullName" placeholder="Rick">
            </div>

             
            <div class="field">
                <label class="label">Email Address</label>
                <input class="input" type="text" name="emailAddress" placeholder="Astley@abc.com">
            </div>

            
            <div class="field">
                <label class="label">City</label>
                <input class="input" type="text" name="city" placeholder="">
            </div>

            
            <div class="field">
                <label class="label">Country</label>
                <input class="input" type="text" name="country" placeholder="">
            </div>

            <!-- Submit -->
            <div class="field">
                <input class="button is-info" type="submit" value="Submit">
            </div>

        </form>  
    </div>
</div>

<p></p>

<div class="container">
    <table class="table is-bordered is-striped is-fullwidth table-striped">
        <thead class="thead-dark">
            <th>ID</th> 
            <th>Full Name</th> 
            <th>Email Address</th> 
            <th>City</th>
            <th>Country</th>  
        </thead> 
        <tbody> 
            {{#each results}} 
            <tr> 
                <td>{{this.id}}</td>
                <td>{{this.fullName}}</td> 
                <td>{{this.emailAddress}}</td> 
                <td>{{this.city}}</td> 
                <td>{{this.country}}</td>
            </tr> 
            {{/each}} 
        </tbody> 
    </table> 
</div>
